    <id>releases</id>
    <!-- CHANGE HERE by your team nexus server -->
    <url>http://54.198.77.75:8081/repository/maven-releases/</url>
  </repository>
  <snapshotRepository>
    <id>snapshots</id>
    <!-- CHANGE HERE by your team nexus server -->
    <url>http://54.198.77.75:8081/repository/maven-snapshots/</url>
   </snapshotRepository> 
</distributionManagement>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
